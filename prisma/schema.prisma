generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Issue {
  id          String   @id @default(cuid())
  title       String
  description String
  status      Status   @default(New)
  assignee    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  New
  Open
  InProgress
  InReview
  Testing
  Resolved
  Closed
}
